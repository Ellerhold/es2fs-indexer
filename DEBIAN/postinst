#!/bin/sh

set -e

# See https://lucumr.pocoo.org/2014/1/27/python-on-wheels/
/usr/bin/pip3 install --no-index /tmp/fs2es-indexer/fs2es_indexer-* --find-links=/tmp/fs2es-indexer/

rm -Rf /tmp/fs2es-indexer

systemctl daemon-reload

if systemctl is-active --quiet fs2es-indexer.service;
then
    systemctl restart fs2es-indexer.service
fi
